<Window x:Class="Hola.EnterNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hola"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        MinHeight="100" MinWidth="200" WindowStartupLocation="CenterScreen">
    <StackPanel>
        
        <TextBlock Text="Enter your name:" TextAlignment="Center" Margin="5"/>
        <TextBox Name="tbName" TextAlignment="Center" Margin="5"/>

        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Grid.Row="4" Grid.Column="1">
            <Button IsDefault="True" MinWidth="60" Margin="5" Click="OK_Click">OK</Button>
            <Button IsCancel="True" MinWidth="60" Margin="5">Cancel</Button>
        </StackPanel>
        
    </StackPanel>
</Window>
